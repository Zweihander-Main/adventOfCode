{
	"name": "advent",
	"private": true,
	"description": "",
	"version": "0.0.1",
	"author": "ZweihÃ¤nder",
	"license": "MIT",
	"dependencies": {
		"ts-node": "^9.0.0"
	},
	"type": "module",
	"devDependencies": {
		"@babel/preset-typescript": "^7.10.4",
		"@types/node": "^14.14.10",
		"@typescript-eslint/eslint-plugin": "^3.9.0",
		"@typescript-eslint/parser": "^3.9.0",
		"eslint": "^7.6.0",
		"eslint-config-prettier": "^6.11.0",
		"eslint-plugin-prettier": "^3.1.4",
		"prettier": "^2.0.5",
		"tslib": "^2.0.1",
		"typescript": "^3.9.7"
	},
	"scripts": {
		"ts-run": "node --loader ts-node/esm.mjs",
		"ts-debug": "node --inspect=127.0.0.1:9228 --loader ts-node/esm.mjs",
		"test": "echo \"Write tests! -> \" && exit 1"
	},
	"eslintConfig": {
		"env": {
			"es6": true,
			"node": true
		},
		"parserOptions": {
			"project": "tsconfig.json",
			"ecmaVersion": 2019
		},
		"plugins": [
			"@typescript-eslint"
		],
		"extends": [
			"eslint:recommended",
			"plugin:@typescript-eslint/eslint-recommended",
			"plugin:@typescript-eslint/recommended",
			"plugin:@typescript-eslint/recommended-requiring-type-checking",
			"prettier",
			"prettier/@typescript-eslint"
		],
		"rules": {
			"quotes": [
				"error",
				"single"
			],
			"semi": [
				"error",
				"always"
			],
			"no-console": [
				"error",
				{
					"allow": [
						"warn",
						"error",
						"debug"
					]
				}
			],
			"no-mixed-spaces-and-tabs": [
				"error",
				"smart-tabs"
			]
		},
		"overrides": [
			{
				"rules": {
					"@typescript-eslint/camelcase": "off",
					"@typescript-eslint/no-explicit-any": "off"
				}
			}
		]
	},
	"prettier": {
		"singleQuote": true,
		"trailingComma": "es5",
		"tabWidth": 4,
		"useTabs": true,
		"arrowParens": "always"
	},
	"browserslist": {
		"production": [
			"> 0.2%",
			"Firefox ESR",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	}
}
